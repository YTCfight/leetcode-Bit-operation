 //整数替换
 int ReplaceInteger(int input)
 {
	 int count = 0;
	 while (input != 1)
	 {
		 if (input == 3)
		  {
			  return count + 2;
		  }
		 else if ((input & 1) == 0)
		 {
			 input=input >> 1;
		 }
		 else if ((input & 2) == 2)
		 {
			 input += 1;
		 }
		 else
		 {
			 input -= 1;
		 }
		 count++;
	 }
	 return count;
 }
 int main()
 {
	 int input = 0;
	 scanf("%d", &input);
	 int ret = ReplaceInteger(input);
	 printf("%d\n", ret);
	 system("pause");
	 return 0;
 }
